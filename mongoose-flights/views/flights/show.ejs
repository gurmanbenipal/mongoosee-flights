<%- include('../partials/header') %>
<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
</section>

<section id="show-page">
<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <label>Airport:</label>
  <select name="airport">
    <option value="YVR">YVR</option>
    <option value="YYZ">YYZ</option>
    <option value="LAX">LAX</option>
    <option value="AMD">AMD</option>
    <option value="LHR">LHR</option>
  <label>Arrival
    <input type="datetime-local" name="arrival" value="2024-07-05T08:00">
  </label>
  <input type="submit" value="Add Destination">
</form>
</section>


<% if (flight.destinations.length) { %>
    <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Airport</th>
            <th>Flight Date</th>
          </tr>
        </thead>
        <tbody>
          <% flight.destinations.forEach(function(d) { %>
            <tr>
              <td><%= d.createdAt.toLocaleDateString() %></td>
              <td><%= d.airport %></td>
              <td><%= d.arrival %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
        <h4>No Destinations Yet</h4>
    <% } %>

    <h2>Tickets</h2>
    <% if (flight.tickets.length) { %>
      <table>
          <thead>
            <tr>
              <th>Seat</th>
              <th>Price</th>
  
            </tr>
          </thead>
          <tbody>
            <% flight.tickets.forEach(function(t) { %>
              <tr>
                <td><%= t.seat %></td>
                <td><%= t.price %></td>
  
              </tr>
            <% }); %>
          </tbody>
        </table>
    <% } else { %>
      <h5>No Tickets Yet</h5>
    <% } %>
  
  
    <a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a>
  

<%- include('../partials/footer') %>